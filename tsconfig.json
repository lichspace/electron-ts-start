{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
  },
  "include": [
    "src/**/*"
  ],
}